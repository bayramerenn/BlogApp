
@model IEnumerable<Category>

<div class="list-group">
    @foreach (var item in Model)
    {
        <div class="list-group">
            <a asp-controller="Blog"
               asp-action="Index"
               asp-route-id="@item.Id"
               class="list-group-item list-group-item @(ViewBag.SelectedCategory == item.Id.ToString() ? "active":"")">
                @item.Name
            </a>
        </div>
    }
</div>